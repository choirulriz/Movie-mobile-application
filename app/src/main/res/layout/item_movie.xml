<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_item_poster"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/txt_item_title"
        style="@style/TextItem.title"
        android:layout_toEndOf="@+id/img_item_poster"
        android:textStyle="bold"
        android:text="@string/title_of_movie"/>

    <TextView
        android:id="@+id/txt_item_genre"
        style="@style/TextItem.primariDark"
        android:layout_toEndOf="@+id/img_item_poster"
        android:layout_below="@+id/txt_item_title"
        android:layout_marginTop="4dp"
        android:text="@string/genres_of_movies"/>
    
    <TextView
        android:id="@+id/user_score"
        style="@style/TextItem"
        android:layout_below="@id/txt_item_genre"
        android:layout_toEndOf="@id/img_item_poster"
        android:layout_marginTop="30dp"
        android:text="User Score"/>
    
    <TextView
        android:id="@+id/release_date"
        style="@style/TextItem"
        android:text="Release Date"
        android:layout_toEndOf="@id/img_item_poster"
        android:layout_below="@id/user_score"
        android:layout_marginTop="8dp"
        />
    
    <TextView
        android:id="@+id/runtime"
        style="@style/TextItem"
        android:layout_toEndOf="@id/img_item_poster"
        android:layout_below="@id/release_date"
        android:layout_marginTop="8dp"
        android:text="Runtime"/>

    <TextView
        android:id="@+id/txt_item_user_score"
        style="@style/TextItem.primariDark"
        android:text="@string/user_score"
        android:layout_toEndOf="@id/img_item_poster"
        android:layout_marginStart="120dp"
        android:layout_below="@id/txt_item_genre"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/txt_item_release_date"
        style="@style/TextItem.primariDark"
        android:layout_toEndOf="@id/img_item_poster"
        android:layout_marginStart="120dp"
        android:layout_below="@id/txt_item_user_score"
        android:layout_marginTop="8dp"
        android:text="@string/release_date"/>

    <TextView
        android:id="@+id/txt_item_runtime"
        style="@style/TextItem.primariDark"
        android:layout_toEndOf="@id/img_item_poster"
        android:layout_below="@id/txt_item_release_date"
        android:layout_marginStart="120dp"
        android:layout_marginTop="8dp"
        android:text="in hours"/>


</RelativeLayout>